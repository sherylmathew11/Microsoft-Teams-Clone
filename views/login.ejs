        <title>Login</title>
        
    </head>
    <body>
        <div class="section-top">
            <div class="overlay"></div>
            <div class="container">
                <div class="row"><div class="col-md-6" id="mainHeading"><h1>Teams Clone</h5></div></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <form action="/" method="POST" class="box">
                                <h1>Login</h1>
                                <p class="text-muted">
                                    Please enter your username and password!
                                </p> 
                                <input type="text" id="username" name="username" placeholder="Username" required> 
                                <input type="password" id="password" name="password" placeholder="Password" autocomplete="on" required> 
                                <input type="submit" name="" value="Sign In" href="#">
                                <a href="/signup">Don't Have An Account? Sign Up here</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
